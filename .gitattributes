# Track DuckDB monthly snapshots with Git LFS (compressed archival)
data/duckdb/monthly/*.duckdb filter=lfs diff=lfs merge=lfs -text

# Track Parquet archives with Git LFS (already compressed)
data/duckdb/archives/*.parquet filter=lfs diff=lfs merge=lfs -text

# Do NOT track live database or daily snapshots
data/duckdb/economic_dashboard.duckdb -filter -diff -merge text
data/duckdb/economic_dashboard.duckdb.wal -filter -diff -merge text
data/duckdb/snapshots/*.duckdb -filter -diff -merge text
